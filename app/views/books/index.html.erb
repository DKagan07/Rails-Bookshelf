<h1 class='display-4 text-center'>Welcome to your bookshelf!</h1>

</br>
</br>
<h6 class='ps-4'>Here are your list of books on your bookshelf:</h6>

<br/>
<br/>
<div class='text-center px-5'>
  <% if @books %>
    <table class='table table-striped table-bordered table-responsive table-hover'>
      <thead>
        <th>Title</th>
        <th>Author</th>
        <th>Have I read it?</th>
        <th>Synopsis</th>
      </thead>
    
      <tbody class="table-group-divider">
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td>
            <%if book.read %>
              <%= 'Yes' %>
            <%else%>
              <%= "No" %>
            <%end%>
          </td>
          <td><%= link_to 'Learn More', book_path(book.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
</div>

<br/>
<br/>
<br/>
<div class='text-center'><%= link_to "Add to shelf", new_book_path, class:"btn btn-dark btn-lg" %></div>