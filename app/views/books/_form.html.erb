<%= form_with model: books do |form| %>
  <div class='mb-3 px-5'>
    <%= form.text_field :title, class:'form-control', placeholder: "Book Title" %>
  </div>
  <br/>
  <div class='mb-3 px-5'>
    <%= form.text_field :author, class:'form-control', placeholder: "Author Name" %>
  </div>

  <div class='mb-3 px-5'>
    <%= form.label "Have you read this book?" %>
    <%= form.radio_button :read, "true" %>
    <%= form.label "Yes" %>
    <%= form.radio_button :read, "false" %>
    <%= form.label "No" %>
  </div>

  <div class='mb-3 px-5'>
    <%= form.text_area :synopsis, class:'form-control', placeholder: "Write out your quick synopsis here!" %>
  </div>

  <div class='text-center'>
    <%= form.submit class:"btn btn-secondary btn-dark"%>
  </div>

<% end %>
